def add_connector(snap_attribute, pipes):
    for name, row in snap_attribute.iterrows():
        attributes = {'CV': 0, 
                      'diameter': 0.3, 
                      'status': 'Open',
                      'length': 1, 
                      'minor_loss': 0,
                      'roughness': 150,
                      'geometry': row['geometry'],
                      'start_node_name': row['node'],
                      'end_node_name': name}
        pipes.loc[name+'_connector'] = attributes
    return pipes

